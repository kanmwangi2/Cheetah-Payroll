{
  "name": "cheetah-payroll",
  "version": "1.0.0",
  "description": "Unified full-stack payroll management app for Rwanda (see Blueprint.md)",
  "main": "src/index.tsx",
  "scripts": {
    "start": "npm run frontend",
    "dev": "npm run frontend",
    "build": "npm run build:frontend",
    "build:clean": "rimraf dist && npm run build",
    "frontend": "webpack serve --config webpack.config.js --mode development",
    "build:frontend": "webpack --config webpack.config.js --mode production",
    "build:frontend:clean": "rimraf dist && npm run build:frontend",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prestart": "npm run typecheck",
    "predeploy": "npm run build:frontend:clean && npm run test:ci",
    "deploy": "firebase deploy --only hosting",
    "deploy:full": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:preview": "firebase hosting:channel:deploy preview",
    "deploy:staging": "firebase hosting:channel:deploy staging",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "analyze": "webpack-bundle-analyzer dist/static/js/*.js"
  },
  "dependencies": {
    "@mui/icons-material": "^5.0.0",
    "@mui/material": "^5.0.0",
    "@testing-library/dom": "^10.4.0",
    "@types/react": "^19.1.8",
    "@types/react-router-dom": "^5.3.3",
    "express": "^4.18.2",
    "firebase": "^11.10.0",
    "firebase-admin": "^12.0.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^3.8.4",
    "papaparse": "^5.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.3",
    "recharts": "^3.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/react-dom": "^19.1.6",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "css-loader": "^7.1.2",
    "dotenv-webpack": "^8.1.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "firebase-tools": "^13.0.0",
    "html-webpack-plugin": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-bundle-analyzer": "^4.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.0.0"
  }
}
